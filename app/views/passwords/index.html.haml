%h1
  Passwords
= link_to "Add new password", new_password_path
%table.passwords
  %thead
    %tr
      %th
        Link
      %th
        Name
      %th
        Login
      %th
        Password
      %th
      %th
  - @passwords.each do |item|
    %tr.item
      %td
        =item.link
      %td
        =item.name
      %td
        =item.login
      %td
        =item.password
      %td
        = link_to "Edit", edit_password_path(item)
      %td
        = link_to "Delete", password_path(item), :method => :delete, :confirm => "Are you sure?"
.d_clip_button{:style => "width:10px;height:10px;border:1px solid black; padding:20px;"}
  

:javascript
  $(function(){
    var clip = new ZeroClipboard.Client();
    clip.setText('Copy me!');
    var clip_button = $(".d_clip_button");

    clip.glue(clip_button[0])
  });